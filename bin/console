#!/usr/bin/env ruby
# typed: strict
# frozen_string_literal: true

# 1: set up bundler
require "rubygems"
require "bundler"

Bundler.setup(
  :default,
  :development,
  :test,
)

# require "bundler/setup"

# require "sorbet-runtime"

# 2: load our code
require "npc"

# 3: Extra helpers and debug utilities
require "objspace"
require "pry"
require "pry-byebug"

# 4: Hacks and other garbage
include NPC
extend T::Sig

sig do
  params(
    operands: T::Array[Operand],
    results: T::Array[Result],
  ).returns(Operation)
end
def mkop(operands = [], results = [])
  Operation.new(
    operands: operands,
    results: results,
  )
end

sig do
  params(
    op: Operation,
    value: Value,
    index: Integer,
  ).returns(Operand)
end
def mkoperand(op = mkop, value = nil, index: 0)
  Operand.new(
    op, index, value
  )
end

# 5: gogogogogo
# AwesomePrint.pry!
# AwesomePrint.irb!
Pry.start
